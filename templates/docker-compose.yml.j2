---
version: "3.7"
services:
  jamulus:
    container_name: jamulus
    image: {{ jamulus_container_name }}
    restart: always
    ports:
      - "{{ jamulus_port }}:22124/udp"
    environment:
      TZ: "{{ jamulus_timezone }}"
    entrypoint:
      - "Jamulus"
      - "--server"
      - "--multithreading"
      - "--nogui"
      - "--port"
      - "22124"
      - "--log"
      - "{{ jamulus_log_folder }}/jamulus.log"
      - "--welcomemessage"
      - "{{ jamulus_welcomemessage }}"
      - "--serverinfo"
      - "{{ jamulus_serverinfo }}"
      - "--centralserver"
      - "{{ jamulus_centralserver }}"
      - "--numchannels"
      - "{{ jamulus_numchannels }}"
